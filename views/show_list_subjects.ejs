<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <div class="container">
      <% if(err) { %>
        <div class="card text-white bg-danger">
          <div class="card-body">
            <%= err.message %>
          </div>
        </div>
        <br>
      <% } %>
      <% if(data) { %>
        <div class="card text-white bg-success">
          <div class="card-body">
            <%= data.first_name %> is successfully inserted.
          </div>
        </div>
        <br>
      <% } %>
      <table id='subjects' class="display" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Subject Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (subjects.length > 0) { %>
            <% for (let i = 0; i < subjects.length; i++) { %>
            <tr>
              <td><%= subjects[i].id %></td>
              <td><%= subjects[i].subject_name %></td>
              <td>
                <a href="/subjects/edit/<%= subjects[i].id %>">Edit</a> |
                <a onclick="return confirm('Are you sure?')" href="/subjects/delete/<%= subjects[i].id %>">Delete</a>
              </td>
            </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="5">No Record Available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <% include ./partials/footer %>
    <script>
      $(document).ready(function(){
          $('#subjects').DataTable();
      });
    </script>
  </body>
</html>
