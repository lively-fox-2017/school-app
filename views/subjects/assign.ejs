<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Halaman Assign Student</title>
  </head>
  <body>
    <div class="container">
      <h2 class="heading text-center"><strong><%= dataSubjectStudent[0].Subject.subject_name %></strong></h2>
      <br>
      <table class="table table-stripped table-hover table-sm">
        <thead>
          <tr>
            <th>NOMOR</th>
            <th>NAME</th>
            <th>SCORE</th>
            <th>GRADE SCORE</th>
          </tr>
        </thead>
        <tbody>
          <% dataSubjectStudent.forEach((rows, index) => { %>
            <tr>
              <td><%= index+=1 %></td>
              <td>
                  <%= rows.Student.fullname() %>
              </td>
              <% if (rows.score == null && rows.Student !== null ) { %>
                <td><a href="/subjects/assign/<%= rows.StudentId %>/<%= rows.SubjectId %>/givescore">Give Score</a></td>
                <td>Nilai Belum Di Masukan</td>
              <% } else if (rows.score != null) { %>
                <td><%= rows.score %></td>
                <td><%= helper(rows.score) %></td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="">
        <a href="/subjects"><button type="submit" class="btn btn-primary btn-lg" style="width:100%;"><i class="fa fa-home"> Back To Subject</i></button></a>
      </div>
    </div>
</html>
