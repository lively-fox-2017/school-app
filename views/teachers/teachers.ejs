<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Halaman Teacher</title>
  </head>
  <body>
      <div class="container">
        <h2 class="text-center"><strong>TABLE TEACHER</strong></h2>
        <br>
        <table class="table table-striped table-hover table-sm">
          <thead>
            <tr>
              <th>ID</th>
              <th>FIRST NAME</th>
              <th>LAST NAME</th>
              <th>EMAIL</th>
              <th>SUBJECT</th>
              <th colspan="4" class="text-center">OPTIONS</th>
            </tr>
          </thead>
          <tbody>
            <% dataTeacher.forEach(rows => { %>
              <tr>
                <td><%= rows.id %></td>
                <td><%= rows.first_name %></td>
                <td><%= rows.last_name %></td>
                <td><%= rows.email %></td>
                <td><%= rows.subject_name %></td>
                <td><a href="/teachers/assign/<%= rows.id %>"><i class="fa fa-group"> Assign Subject</i></a></td>
                <td>
                  <!-- <a href="/teachers/add/"> -->
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addModal">
                      <i class="fa fa-user-plus"> Add</i>
                    </button>
                  <!-- </a> -->
                </td>
                <td>
                  <a href="/teachers/edit/<%= rows.id %>">
                    <button type="button" class="btn btn-primary btn-sm">
                      <i class="fa fa-pencil"> Edit</i>
                    </button>
                  </a>
                </td>
                <td>
                  <a href="/teachers/delete/<%= rows.id %>">
                    <button type="button" class="btn btn-primary btn-sm">
                      <i class="fa fa-trash"> Delete</i>
                    </button>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <!-- START OF MODAL ( FOR SMALL / LARGE JUST + modal-sm / modal-lg) -->

        <!-- ADD MODAL -->
        <div class="modal fade" id="addModal" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-remove"></i></button>
                <!-- &times; -->
                <h4 class="modal-title">Form Add New Teacher</h4>
              </div>
              <!-- ACTION POST  WHEN SUBMIT-->
              <form class="" action="/teachers/add" method="post">
              <div class="modal-body">
                <div class="form-group">
                  <input class="form-control" type="text" name="first_name" placeholder="Input Nama Depan" required>
                </div>
                <div class="form-group">
                  <input class="form-control" type="text" name="last_name" placeholder="Input Nama Belakang" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Input Nama Email ( Example : test@gmail.com)" required>
                </div>
              </div>
              <div class="modal-footer">
                <button type="submit" class="btn btn-primary btn-lg" style="width:100%;"><i class="fa fa-plus"> Add Teacher</i></button>
              </div>
              </form>
              <!-- END OF ACTION POST WHEN SUBMIT -->
            </div>
          </div>
        </div>
        <!-- ADD MODAL -->

          <!-- END OF MODAL -->
      </div>
  </body>
</html>
